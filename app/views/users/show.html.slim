- if @user.team
  h1
    = image_tag @user.image
    = @user.name
  h2= "#{@user.team.name} #{@user.team.rank}"
- else
  p= link_to 'Create a team', new_team_path
table
  tr
    th #
    th Name
    th Position
    th Height
    th Weight
    th Age
    th Experience
    th Top Bidder
    th Top Bid
  - @user.team && @user.team.bids.map(&:player).each do |player|
    tr
      td= player.number
      td= link_to player.full_name, player
      td= player.position
      td= player.height_display
      td= player.weight
      td= player.age
      td= player.experience_display
      td= player.top_bidder.name
      td= number_to_currency(player.top_bid.amount, precision: 2)
